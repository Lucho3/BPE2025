
1.

#include <stdio.h>
#include <ctype.h>

int main() {


 int *p = (void*)malloc(7 *sizeof(int));
 if(p==NULL)
    exit(1);


  int sum=0;
    int n;
       for (int i = 0; i < 7; i++) {
       scanf("%d", &n);

       while (n < -5000 || n > 5000) {
           printf("Enter a number between -5000 and 5000: ");
           scanf("%d", &n);
       }

       p[i] = n;
   }
    for(int i=0;i<8;i++){
        sum =sum+p[i];
    }
    printf("%d", sum);


    return 0;
}



