#include <stdio.h>
#include <ctype.h>

int main() {


    int arr[3][3] ={{2,7,6},
                    {9,5,1},
                    {4,3,8}};

int red[3] ={0,0,0};
int kolona[3];

  for (int i = 0; i < 3; i++) {
    for (int j = 0; j < 3; j++) {
        red[i] =  red[i]+ arr[i][j];
        kolona[j] = kolona[j]+arr[i][j];
    }
}

if(red[0]==red[1] && red[1]==red[2] && red[2]==kolona[0] && kolona[0]==kolona[1] && kolona[1]==kolona[2])
printf("magicheski");
else
printf("not magicheski");



    return 0;
}
