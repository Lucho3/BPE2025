#include <stdio.h>
#include <ctype.h>

int main() {


 int *p = (void*)malloc(7 *sizeof(int));
 if(p==NULL)
    exit(1);


  int sum=0;
    int n;
       for (int i = 0; i < 7; i++) {
       scanf("%d", &n);

       while (n < -5000 || n > 5000) {
           printf("Enter a number between -5000 and 5000: ");
           scanf("%d", &n);
       }

       p[i] = n;
   }
  int max=p[0];
    for(int i=0;i<7;i++){
       if(max<p[i])
        max=p[i];
    }
    printf("%d", max);
    return 0;
}


