2.2

// Online C compiler to run C program online
#include <stdio.h>


int main() {
 
 int a=10;
 int b=5;
 int* ip1;
 ip1 = &a;
 int* ip2 = &b;
 
 printf("%d \n", *ip1 + *ip2);
 printf("%d \n", *ip1 - *ip2);
 printf("%d \n", *ip1 * *ip2);
 printf("%d \n", *ip1 / *ip2);
 


    return 0;
}
