2.
 
#include <stdio.h>
#include <ctype.h>
 
typedef struct vehicle{
int speed;
int seats;
} veh;
 
typedef struct car{
    veh base;
    int doors;
}car;
 
typedef struct boat{
    veh base;
}boat;
 
typedef struct motor{
    veh base;
    char brand[10];
}motor;
 
typedef struct plane{
    veh base;
}plane;
 
int main() {
 
car car={{100,5},4};
boat boat={{30,6}};
motor motor={{200,2}, "hoya"};
plane plane={{500, 80}};
 
if(car.base.speed>motor.base.speed)
    printf("car faster \n");
else
    printf("motor faster \n");
 
if(plane.base.seats>boat.base.seats)
    printf("plane bigger \n");
else
    printf("boat bigger \n");
 
 
    return 0;
}
 
