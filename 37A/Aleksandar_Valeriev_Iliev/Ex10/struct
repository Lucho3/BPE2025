#include <stdio.h>
#include <ctype.h>
 
typedef struct Student{
float grade;
char name[30];
} student;
 
typedef struct klas{
    student student;
    int klas;
    char paralelka;
}klas;
 
typedef struct vipusk{
    klas klas;
    int count;
 
}vipusk;
 
 
 
int main(){
 
student st1={6,"alex"};
student st2={5,"ivan"};
student st3={4.50,"georgi"};
student st4={4.75,"peter"};
 
 
klas klas1={st1, 10, "a"};
 
    return 0;
}
